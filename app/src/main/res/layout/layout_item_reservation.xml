<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/reservation_layout"
    android:layout_width="350dp"
    android:layout_height="100dp"

    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/blue"
    app:cardElevation="15dp"
    android:layout_marginHorizontal="17.5dp"
    android:layout_marginVertical="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_lot_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/start_month_and_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="10dp"
            android:paddingStart="15dp"

            android:text="@string/month_and_year"
            android:textSize="12dp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="@+id/card_lot_item"
            app:layout_constraintStart_toStartOf="@+id/card_lot_item"
        />

        <TextView
            android:id="@+id/start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="15dp"

            android:text="@string/day"
            android:textSize="12dp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_month_and_year"
        />

        <TextView
            android:id="@+id/start_hour_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="15dp"
            android:text="@string/hour_of_day"
            android:textSize="10dp"

            android:textStyle="normal"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_day"
        />

        <TextView
            android:id="@+id/end_month_and_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="10dp"
            android:paddingEnd="15dp"

            android:text="@string/month_and_year"
            android:textSize="12dp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="@+id/card_lot_item"
            app:layout_constraintEnd_toEndOf="@+id/card_lot_item"
        />

        <TextView
            android:id="@+id/end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingEnd="15dp"

            android:text="Miercoles 21"
            android:textSize="12dp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_month_and_year"
        />

        <TextView
            android:id="@+id/end_hour_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingEnd="15dp"

            android:text="8:00 AM"
            android:textSize="10dp"

            android:textStyle="normal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_day"
        />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="82dp"
            android:layout_height="34dp"

            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue"

            android:text="Delete"
            android:gravity="center"
            android:textSize="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
